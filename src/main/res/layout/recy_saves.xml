<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/green_border_25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/back"
        app:layout_constraintStart_toStartOf="@id/back"
        app:layout_constraintTop_toTopOf="@id/back"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:text="User"
        android:gravity="center"
        android:maxWidth="300dp"
        android:maxLines="2"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/name"
        app:layout_constraintEnd_toEndOf="@id/back"
        android:layout_marginEnd="20dp"
        android:src="@drawable/copy"
        />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/name"
        app:layout_constraintEnd_toStartOf="@id/name"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/ip_po"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/back"
        app:layout_constraintStart_toStartOf="@id/back"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:text="100.100.100.100"
        android:gravity="center"
        android:maxWidth="200dp"
        android:maxLines="1"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ip_po"
        app:layout_constraintBottom_toBottomOf="@id/ip_po"
        app:layout_constraintEnd_toEndOf="@id/back"
        app:layout_constraintStart_toEndOf="@id/ip_po"
        android:src="@drawable/delete"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ip_po"
        app:layout_constraintBottom_toBottomOf="@id/ip_po"
        app:layout_constraintStart_toStartOf="@id/back"
        app:layout_constraintEnd_toStartOf="@id/ip_po"
        android:src="@drawable/edit"
        />

</androidx.constraintlayout.widget.ConstraintLayout>